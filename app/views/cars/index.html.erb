<div class="global-section-cards">
  <div class="left-section-cards">
    <%= form_with url: cars_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query, params[:query],
        class: "form-control-search",
        placeholder: "Cherchez par marque"
      %>
      <%= submit_tag "Chercher", class: "btn btn-primary" %>
    <% end %>

    <div class="card-grid"  class="col-5 col-lg-8 flex-grow">
      <% @cars.each do |car| %>
        <div>
          <%= cl_image_tag car.photos.first.key, height: 200, width: 285, crop: :fill %>
          <%= car.brand %>
          <%= car.model %>
          <%= car.year_of_production %>
          <%= car.price_per_day %>
          <%= link_to "Details", car_path(car) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-7 col-lg-4" id="right-section-cards"
    style="height: 600px"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
